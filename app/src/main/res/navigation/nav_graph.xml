<?xml version="1.0" encoding="utf-8"?>

<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/mainActivity">

    <fragment
        android:id="@+id/mainActivity"
        android:name="com.justjump.filmscave.MainFragment"
        android:label="fragment_start_application"
        tools:layout="@layout/fragment_main">

        <action
            android:id="@+id/action_mainActivity_to_signUp"
            app:destination="@id/signUp" />

        <action
            android:id="@+id/action_mainActivity_to_login"
            app:destination="@id/login"/>
        <action
            android:id="@+id/action_mainActivity_to_homeFragment"
            app:destination="@id/homeFragment" />

    </fragment>

    <fragment
        android:id="@+id/signUp"
        android:name="com.justjump.filmscave.users.SignUpFragment"
        android:label="fragment_sign_up"
        tools:layout="@layout/fragment_sign_up" >

        <action
            android:id="@+id/action_signUp_to_homeFragment"
            app:destination="@id/homeFragment" />

    </fragment>

    <fragment
        android:id="@+id/login"
        android:name="com.justjump.filmscave.users.LoginFragment"
        android:label="fragment_login"
        tools:layout="@layout/fragment_login" >

        <action
            android:id="@+id/action_login_to_homeFragment"
            app:destination="@id/homeFragment" />

        <action
            android:id="@+id/action_login_to_recoverPassFragment"
            app:destination="@id/recoverPassFragment" />

    </fragment>

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.justjump.filmscave.HomeFragment"
        android:label="activity_home"
        tools:layout="@layout/fragment_home" >

        <action
            android:id="@+id/action_homeFragment_to_mainActivity"
            app:destination="@id/mainActivity" />

    </fragment>
    <fragment
        android:id="@+id/recoverPassFragment"
        android:name="com.justjump.filmscave.users.RecoverPassFragment"
        android:label="fragment_recover_pass"
        tools:layout="@layout/fragment_recover_pass" >
        <action
            android:id="@+id/action_recoverPassFragment_to_recoverViaEmailFragment"
            app:destination="@id/recoverViaEmailFragment" />
    </fragment>
    <fragment
        android:id="@+id/recoverViaEmailFragment"
        android:name="com.justjump.filmscave.users.RecoverViaEmailFragment"
        android:label="fragment_recover_via_email"
        tools:layout="@layout/fragment_recover_via_email" />
</navigation>