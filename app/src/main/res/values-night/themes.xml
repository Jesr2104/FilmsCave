<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.FilmsCave" parent="Theme.MaterialComponents.DayNight.NoActionBar">

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_200</item>
        <item name="colorPrimaryVariant">@color/main_dark_blue</item>
        <item name="colorOnPrimary">@color/palette_black</item>

        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_200</item>
        <item name="colorOnSecondary">@color/palette_black</item>

        <!-- com.justjump.filmscave.data.utils.Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>

        <!--============================-->
        <!-- Customize your theme here. -->
        <!--============================-->

        <!-- to put the translucent bars. -->
        <item name="android:windowTranslucentNavigation">true</item>

    </style>
</resources>